@require '../../common/stylus/variable.rn.styl'
@require '../../common/stylus/theme/components/popup.styl'

.cube-popup
  flex 1 1 100%
  height 100%
  position absolute
  left 0
  right 0
  top 0
  bottom 0

.cube-popup-show
  transform: translateX(0)

.cube-popup-hide
  transform: translateX(-9999)

.cube-popup-center
  justify-content center
  align-items center
  
.cube-popup-left
  flex-direction row

.cube-popup-right
  flex-direction row-reverse

.cube-popup-bottom
  flex-direction column-reverse

.cube-popup-content
  z-index 999
  box-sizing border-box

.cube-popup-mask
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  background-color $var(mask-bgc_opacity)
  opacity 0

.move-up
  transform translateY(999)
.move-left
  transform translateX(999)
.move-right
  transform translateX(-999)
.move-down
  transform translateY(-999)
.move-center
  transform scale(0)
.fade
  opacity 0
